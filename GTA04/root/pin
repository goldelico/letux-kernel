#
# enable pin
#
# usage: pin number

rfkill unblock wwan
sleep 5

make femtocom

for i in $(cd /sys/class/tty/ && echo ttyHS*)
	do
	if [ "$(cat /sys/class/tty/$i/hsotype)" == "Application" ]
		then
		IF="/dev/$i"
	fi
done

[ "$IF" ] || (echo HSO Application interface not found; exit 1)

echo Interface: $IF

(
	echo "AT+CPIN=$1"; sleep 3
) | ./femtocom $IF
