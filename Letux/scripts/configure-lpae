#!/bin/bash
# configure kernel (letux_lpae_defconfig) for LPAE
# run from root of source tree

[ "$PLATFORM" ] || export PLATFORM=letux_lpae
[ "$ARCH" ] || export ARCH=arm;

# update lpae_defconfig
CONF="arch/${ARCH}/configs/${PLATFORM}_defconfig"

# ./mkernel will overwrite $CONF from .config and the # auto-generated will be lost!
(echo "# auto-generated from letux_defconfig"; cat arch/${ARCH}/configs/letux_defconfig) >$CONF

# ARMv6 has no LPAE
scripts/config --file arch/arm/configs/letux_lpae_defconfig -d ARCH_MULTI_V6

# OMAP3&4 have no LPAE
scripts/config --file arch/arm/configs/letux_lpae_defconfig -d ARCH_OMAP3
scripts/config --file arch/arm/configs/letux_lpae_defconfig -d ARCH_OMAP4
# scripts/config --file arch/arm/configs/letux_lpae_defconfig -d ARCH_MXC

# enable LPAE
scripts/config --file arch/arm/configs/letux_lpae_defconfig -e ARM_LPAE

# configure for 4GB RAM
# read current and modify
# sed -i.bak 's/CONFIG_CMDLINE="/CONFIG_CMDLINE="mem=2032M@0x80000000 mem=2048M@0x200000000 /g' $CONF
NEWVAL=$(scripts/config --file arch/arm/configs/letux_lpae_defconfig -s CMDLINE | sed 's/CONFIG_CMDLINE="/CONFIG_CMDLINE="mem=2032M@0x80000000 mem=2048M@0x200000000 /g')
# scripts/config --file arch/arm/configs/letux_lpae_defconfig --set-str CMDLINE "$NEWVAL"
