			gpio-key,wakeup;
		};

		button_y {
			label = "Y";
			linux,code = <KEY_PAGEUP>;
			gpios = <&gpio7 5 GPIO_ACTIVE_LOW>;	/* gpio7_197 */
			gpio-key,wakeup;
		};

		dpad_left {
			label = "LEFT";
			linux,code = <KEY_LEFT>;
			gpios = <&gpio5 13 GPIO_ACTIVE_LOW>;	/* gpio5_141 */
			gpio-key,wakeup;
