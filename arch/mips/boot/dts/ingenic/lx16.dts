// NOTE: all this could be made depend on a set of some CONFIG options

#define LX16_REV 	3	// main board revision
#define LX16_W		2	// 0 = none; WLAN and Bluetooth: 1 = QCom, 2 = ESP32
#define PWM_LED		0	// 1 = use PWM on led0 and led1
#define SPI_BITBANG	0	// 1 = debug using bitbang gpio
#define APPLICATION	293	// RetRead hardware version (290, 291, 292, 293, ...)

/* overwrites for Retrode3 */
#undef LX16_REV
#define LX16_REV	2	// based on Rev 2
#if APPLICATION == 293
#undef SPI_BITBANG
#define SPI_BITBANG	1	// no WLAN
#endif
#undef LX16_W
#define LX16_W	2		// ESP32
#if APPLICATION < 294
#undef LX16_W
#define LX16_W	0		// no WLAN
#else
#undef LX16_W
#define LX16_W	2		// ESP32
#endif

/* choose one board revision */
#if LX16_REV == 1
#include "lx16-v0.1.dtsi"
#elif LX16_REV == 2
#include "lx16-v0.2.dtsi"
#elif LX16_REV >= 3
#include "lx16-v0.3.dtsi"
#endif

/* choose none or one of the wireless options */
#if LX16_W == 1
#include "lx16-wireless-qcom.dtsi"
#elif LX16_W == 2
#include "lx16-wireless-esp32.dtsi"
#endif

// FIXME: should we have different DTSI for each APPLICATION? e.g. retrode293.dtsi?
#include "lx16+retrode3.dtsi"
